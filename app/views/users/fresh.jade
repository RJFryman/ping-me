extends ../shared/template

block content
  h1= title

    form(action='register', method='POST')
      fieldset
        legend Register
        .row
          .small-12.columns
            label Email
            input(type='email', name='email', autofocus)
            label User Name
            input(type='text', name='username')
            label Password
            input(name='password', type='password')
            button.tiny.radius Register

