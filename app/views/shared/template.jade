doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/vendor/normalize.css')
    link(rel='stylesheet', href='/css/vendor/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    ul.breadcrumbs
      if user
        li: a(href="/") Pings
        li: a(href="/") Friends
        li: a(href="/users/"+user._id.toString())= user.username
        li: a(href="/logout") Log Out
      if !user
        li: a(href="/") Home
        li: a(href="/register") Register
        li: a(href="/login") Login
    .row
      .small-12.columns
        block content

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.min.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBd4znPfZoay_3_7wzlk5nbDw4K2NiZI0Y&sensor=true')
    script(src='/js/source/main.js')
    block script

